#include <Arduino.h>
#include <Wire.h>
#include "ADS.h"
#include "MicroSD.h"
#include "Task.h"       // Archivo de cabecera para las tareas de FreeRTOS

void setup() {
  Serial.begin(115200);
  Wire.begin();

  // Inicializa la tarjeta SD
  initSD();
  
  // Escribir cabecera si es necesario
 // writeHeader();

  // Inicializa el ADS1115
  initADS();

  // Inicializar las tareas de FreeRTOS
  initTasks();
}

void loop() {
  vTaskDelay(pdMS_TO_TICKS(500));
}
